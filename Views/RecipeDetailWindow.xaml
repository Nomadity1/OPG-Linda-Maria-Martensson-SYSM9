<Window x:Class="CookMaster.Views.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views" xmlns:viewmodels="clr-namespace:CookMaster.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RecipeDetailViewModel}"
        mc:Ignorable="d"
        Title="RecipeDetailWindow" Height="450" Width="800" FontFamily="Maiandra GD" FontSize="16" Background="PaleTurquoise">
    <Grid>
        <StackPanel>
            <Label Grid.Column="0" Grid.ColumnSpan="3" Content="Cook Master" FontSize="28" />
            <TextBlock Text="Recipe Details" FontSize="22" Margin="40,10,40,0"/>
            <TextBlock Text="Title:" Margin="40,0,40,5"/>
            <TextBox Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnly}" Margin="40,0,40,5"/>
            <TextBlock Text="Ingredients:" Margin="40,0,40,5"/>
            <TextBox Text="{Binding Ingredients, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnly}" Margin="40,0,40,5"/>
            <TextBlock Text="Instructions:" Margin="40,0,40,5"/>
            <TextBox Text="{Binding Instructions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnly}" Margin="40,0,40,5"/>
            <TextBlock Text="Category:" Margin="40,0,40,5"/>
            <TextBox Text="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnly}" Margin="40,0,40,5"/>
            <TextBlock Text="Cooking time:" Margin="40,0,40,5"/>
            <TextBox Text="{Binding CookingTime}" Margin="40,0,40,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Copy" Command="{Binding CopyCommand}" Margin="5" FontSize="12" Width="70" Height="26" />
                <Button Content="Edit" Command="{Binding EditCommand}" Margin="5" FontSize="12" Width="70" Height="26" />
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="5" FontSize="12" Width="70" Height="26" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5" FontSize="12" Width="70" Height="26" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

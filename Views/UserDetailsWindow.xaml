<Window x:Class="CookMaster.Views.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views" xmlns:viewmodels="clr-namespace:CookMaster.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:UserDetailsViewModel}"
        mc:Ignorable="d"
        Title="UserDetailsWindow" Height="260" Width="500" FontFamily="Maiandra GD" FontSize="12" Background="PaleTurquoise" >
    <!--Fönster för registrering-->
    <Grid>
        <!--Definierar layout-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.17*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.18*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.33*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.37*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="3" Content="Cook Master" FontSize="30" />
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Content="Change your user details:" />
        <!--ÄNDRA UPPGIFTER - BUNDEN TILL KOMMANDON DIREKT VIA DATAKONTEXT-->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Username*" Width="100" />
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Password**" Width="100" />
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Repeat password**" Width="100" />
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Select your country" Width="100" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding UpdatedUserName}" Width="100" Height="20" 
                 HorizontalAlignment="Left" />
        <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="UpdatedPassWord" 
                     PasswordChanged="UpdatedPassWord_PasswordChanged"  Width="100" Height="20"  
                     HorizontalAlignment="Left" />
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding UpdatedRepeatedPassWord}" Width="100" Height="20"  
                     HorizontalAlignment="Left" />
        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="CountryComboBox" ItemsSource="{Binding Countries}" 
                  SelectedItem="{Binding UpdatedSelectedCountry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                  Width="100" Height="20"  HorizontalAlignment="Left" />
        <!--Hjälptexter-->
        <TextBlock Grid.Row="2" Grid.Column="2" 
                   Text="*) Your username should have 4-8 characters.)" FontSize="10" 
                   TextWrapping="Wrap" Width="170" />
        <TextBlock Grid.Row="3" Grid.RowSpan="2" Grid.Column="2" 
                   Text="**) Your password should have minimum 8 characters including 1 special character, 1 digit, 1 upper and 1 lowercase letter.)" 
                   FontSize="10" TextWrapping="Wrap" Width="170" />
        <!--Knappar-->
        <Button Grid.Row="5" Grid.Column="2" Content="Save" 
                Command="{Binding SaveUpdatesCommand}" 
                FontSize="12" Width="60" Height="22" Margin="20,0" />
        <Button Grid.Row="6" Grid.Column="2" Content="Cancel" 
                Command="{Binding CancelCommand}" 
                FontSize="12" Width="60" Height="22" Margin="20,0" />
        <!--Felmeddelande-->
        <TextBlock Grid.Row="7" Grid.Column="2" 
                   Text="{Binding Error}" Foreground="Red" Margin="10" TextWrapping="Wrap" 
                   Width="170" />
    </Grid>
</Window>

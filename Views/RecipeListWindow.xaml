<Window x:Class="CookMaster.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views" xmlns:viewmodels="clr-namespace:CookMaster.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RecipeListViewModel}"
        mc:Ignorable="d"
        Title="RecipeListWindow" Height="450" Width="800" FontFamily="Maiandra GD" FontSize="16" Background="PaleTurquoise">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="3" Content="Cook Master" FontSize="34" />
        <!-- Titel, inloggad tjomme och knappar upptill -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" >
            <TextBlock Text="Current user: " VerticalAlignment="Center" />
            <TextBlock Text="{Binding CurrentUser, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="100" Height="26" />
            <Button Content="User" Command="{Binding UserDetailsCommand, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="12" Width="70" Height="26" />
            <Button Content="Log Out" Command="{Binding LogOutCommand, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Width="70" Height="26" />
        </StackPanel>
        <!-- Receptlista -->
        <ListBox ItemsSource="{Binding Recipes}" SelectedItem="{Binding SelectedRecipe}"
                 DisplayMemberPath="Title" Grid.Row="1" Margin="5" Background="PaleTurquoise" />
        <!-- Knappar nertill -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock Text="Manage recipes: " VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Button Content="Add" Command="{Binding AddRecipeCommand, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="12" Width="70" Height="26" />
            <Button Content="Details" Command="{Binding RecipeDetailsCommand, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="12" Width="70" Height="26" />
            <Button Content="Remove" Command="{Binding DeleteRecipeCommand, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="12" Width="70" Height="26" />
            <TextBlock Text="About the app: " VerticalAlignment="Center" Margin="20,0,5,0"/>
            <Button Content="Info" Command="{Binding InfoCommand, UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="12" Width="70" Height="26" />
        </StackPanel>
    </Grid>
</Window>

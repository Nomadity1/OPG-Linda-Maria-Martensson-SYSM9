<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Maiandra GD" FontSize="16" Background="PaleTurquoise">
    <!--Fönster för huvudinnehållet - Receptsamlingen!-->
    <Grid>
        <!--Definierar layout-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.55*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.65*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Cook Master" FontSize="48" HorizontalAlignment="Center" VerticalContentAlignment="Center" />
        <Label Grid.Row="1" Grid.Column="0" Content="Welcome to your next great meal!" HorizontalAlignment="Center" VerticalContentAlignment="Center" />
        <!--ANVÄNDARVISARE I TVÅ STACKPANELS-->
        <!--BUNDEN TILL KOMMANDON DIREKT VIA DATAKONTEXT-->
        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" >
            <TextBlock Text="Användare:" Margin="0,5,0,0" />
            <TextBlock Text="{Binding UserManager.CurrentUser.DisplayName}" Margin="0" />
            <TextBlock Text="Roll:" Margin="0" />
            <TextBlock Text="{Binding UserManager.CurrentUser.Role}" Margin="0" />
            <TextBlock Text="Status:" Margin="0,5,0,0" />
            <TextBlock Text="{Binding UserManager.IsAuthenticated}" Margin="0" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Vertical">
            <!--Knappen är bunden till kommando i MainWindow View Model-->
            <Button Content="Log out" Command="{Binding LogOutCommand}" Width="100" Height="40" Margin="0" />
        </StackPanel>
    </Grid>
</Window>

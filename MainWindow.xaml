<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="280" Width="500" FontFamily="Maiandra GD" FontSize="16" Background="PaleTurquoise" >
    <!--Fönster för inloggning samt knapp till registrering och återställning av lösenord-->
    <Grid>
        <!--Definierar layout-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.17*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.11*"/>
            <RowDefinition Height="0.06*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="3" Content="Cook Master" FontSize="34" />
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Content="Find your way to the kitchen:" />
        <!--LOG IN OCH LOG UT - BUNDNA TILL KOMMANDON DIREKT VIA DATAKONTEXT-->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Username" Margin="5"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Password" Margin="5" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Width="140" Height="26" />
        <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="PassWord" PasswordChanged="PassWord_PasswordChanged"  Width="140" Height="26" />
        <Button Grid.Row="2" Grid.Column="2" Content="Log in" Command="{Binding LogInCommand}" FontSize="12" Width="60" Height="26" />
        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Error}" Foreground="Red" Width="160" TextWrapping="Wrap" />
        <!--TILL REGISTRERING - BUNDEN TILL KOMMANDON DIREKT VIA DATAKONTEXT-->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Are you new here?" Margin="5" />
        <TextBlock Grid.Row="4" Grid.Column="1" Text="Sign up =>" HorizontalAlignment="Center" />
        <Button Grid.Row="4" Grid.Column="2" Content="Sign up" Command="{Binding OpenRegisterCommand}" FontSize="12" Width="60" Height="26" />
        <!--ÅTERSTÄLLA LÖSENORD GENOM EMAIL - BUNDNA TILL KOMMANDON DIREKT VIA DATAKONTEXT-->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Forgot your password?" Width="160" HorizontalAlignment="Center" Margin="0" />
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Enter username:" TextWrapping="Wrap" Width="160" />
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Email}" Width="140" Height="26" />
        <Button Grid.Row="6" Grid.Column="2" Content="Forgot password" Command="{Binding ForgotPasswordCommand}" FontSize="12" Width="100" Height="26" />
        <!--<TextBlock Grid.Row="7" Grid.Column="0" Text="Insert pin:" Width="160" />
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding PinCode}" Width="140" Height="26" />
        <Button Grid.Row="7" Grid.Column="2" Content="Submit" Command="{Binding ResetPasswordCommand}" FontSize="12" Width="70" Height="26" />-->
    </Grid>
</Window>
